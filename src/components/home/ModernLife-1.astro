---
const {

    description,
    image,
    sub_title,
    title,

} = Astro.props
---

<div class="grid grid-cols-5 justify-between gap-10 p-10">
    <div class="col-span-2">
        <p class="text-4xl font-thin text-white">{ title }</p>
        <div class="mt-2">
            <p class="text-4xl font-thin opacity-60 text-white">{ sub_title }</p>
        </div>
        <div class="mt-8">
            <p class="font-thin opacity-60 text-lg text-white">{ description }</p>
        </div>
    </div>
    <div class="col-span-3">
        <div class="bg-purple-700 w-full h-[70vh]"></div>
    </div>
</div>
