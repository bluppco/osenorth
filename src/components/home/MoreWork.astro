---
import MoreWorkItem from "./MoreWorkItem.astro"
import { WORK } from "../../constants"
---
<section class="p-4 md:p-10  max-w-screen-2xl mx-auto">
    <p class="text-4xl font-extralight text-white">More work</p>
    <p class="text-4xl font-thin opacity-60 text-white">Because we're awesome!</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mt-10">
        {

            WORK.map( ( work ) => {

                return (
                    <MoreWorkItem
                        image={ work.image }
                        title={ work.title }
                        category={ work.categories }
                    />
                )

            })

        }
    </div>
</section>
